# Porta onde o backend irá escutar
PORT=4000

# Credenciais padrão do relógio Control ID
CONTROL_ID_LOGIN=preencha-seu-login
CONTROL_ID_PASSWORD=troque-esta-senha
BRTA_MASTER_IP=192.168.100.10
BRGO_MASTER_IP=192.168.200.10

# Ajustes no backend
CONTROL_ID_MAX_ATTEMPTS=2

# Cache de sessão e timeout do curl
CONTROL_ID_SESSION_TTL_MS=60000
CONTROL_ID_CURL_TIMEOUT_MS=30000

# Verbose logging para diagnóstico de curl
CONTROL_ID_VERBOSE=false

# Caminho customizado para o executável do curl caso não esteja no PATH
CURL_BINARY=curl

# Lista de origens permitidas para CORS (se vazio, qualquer origem é aceita)
CORS_ALLOWED_ORIGINS=

# Configurações de autenticação
AUTH_DB_PATH=./data/auth.sqlite
AUTH_JWT_SECRET=troque-esta-chave
AUTH_JWT_EXPIRES_IN=1h
AUTH_BCRYPT_ROUNDS=10
AUTH_DEFAULT_ADMIN_LOGIN=admin.principal
AUTH_DEFAULT_ADMIN_PASSWORD=troque-esta-senha
AUTH_SECOND_ADMIN_LOGIN=admin.backup
AUTH_SECOND_ADMIN_PASSWORD=troque-esta-senha-tambem
AUTH_COOKIE_NAME=auth_token
AUTH_COOKIE_PATH=/
AUTH_COOKIE_SECURE=false
AUTH_COOKIE_HTTP_ONLY=true
AUTH_COOKIE_SAME_SITE=lax
AUTH_COOKIE_MAX_AGE_MS=3600000
